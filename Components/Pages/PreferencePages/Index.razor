@page "/preferences"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject BlazorApp2.Data.BlazorApp2DbContext DB
@using BlazorApp2.Models

@*This page will show a list of all preferences. *@
<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="preferences/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DB.Preferences">
    <PropertyColumn Property="preference => preference.PreferenceValue" />

    <TemplateColumn Context="preference">
        <a href="@($"preferences/edit?preferenceid={preference.PreferenceId}")">Edit</a> |
        <a href="@($"preferences/details?preferenceid={preference.PreferenceId}")">Details</a> |
        <a href="@($"preferences/delete?preferenceid={preference.PreferenceId}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
