@page "/users/details"
@inject BlazorApp2.Data.BlazorApp2DbContext DB
@using BlazorApp2.Models
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    @if (user is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserName</dt>
            <dd class="col-sm-10">@user.UserName</dd>
            <dt class="col-sm-2">PreferenceId</dt>
            <dd class="col-sm-10">@user.PreferenceId</dd>
            <dt class="col-sm-2">PreferenceValue</dt>
            <dd class="col-sm-10">@user.PreferenceValue</dd>
        </dl>
        <div>
            <a href="@($"/users/edit?userid={user.UserId}")">Edit</a> |
            <a href="@($"/users")">Back to List</a>
        </div>
    }
</div>

@code {
    User? user;

    [SupplyParameterFromQuery]
    public int UserId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        user = await DB.Users.FirstOrDefaultAsync(m => m.UserId == UserId);

        if (user is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
